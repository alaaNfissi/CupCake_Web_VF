{% trans_default_domain 'FOSUserBundle' %}
<div class="page-header header-filter" filter-color="purple"
     style="background-image: url(&apos;{{ asset('assets/img/kit/pro/bg7.jpg') }}&apos;); background-size: cover; background-position: top center;">
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-auto mr-auto">
                <div class="card card-signup">
                    <h2 class="card-title text-center">Edit your profile</h2>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="info info-horizontal">
                                    <div class="icon icon-rose">
                                        <i class="material-icons">timeline</i>
                                    </div>
                                    <div class="description">
                                        <h4 class="info-title">Marketing</h4>
                                        <p class="description">
                                            We've created the marketing campaign of the website. It was a very
                                            interesting collaboration.
                                        </p>
                                    </div>
                                </div>
                                <div class="info info-horizontal">
                                    <div class="icon icon-primary">
                                        <i class="material-icons">code</i>
                                    </div>
                                    <div class="description">
                                        <h4 class="info-title">Fully Coded in HTML5</h4>
                                        <p class="description">
                                            We've developed the website with HTML5 and CSS3. The client has access to
                                            the code using GitHub.
                                        </p>
                                    </div>
                                </div>
                                <div class="info info-horizontal">
                                    <div class="icon icon-info">
                                        <i class="material-icons">group</i>
                                    </div>
                                    <div class="description">
                                        <h4 class="info-title">Built Audience</h4>
                                        <p class="description">
                                            There is also a Fully Customizable CMS Admin Dashboard for this product.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5 mr-auto">
                                <div class="social text-center">
                                    <button class="btn btn-just-icon btn-round btn-twitter">
                                        <i class="fa fa-twitter"></i>
                                    </button>
                                    <button class="btn btn-just-icon btn-round btn-dribbble">
                                        <i class="fa fa-dribbble"></i>
                                    </button>
                                    <button class="btn btn-just-icon btn-round btn-facebook">
                                        <i class="fa fa-facebook"> </i>
                                    </button>
                                    <h4> or be classical </h4>
                                </div>
                                {{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': {'class': 'fos_user_profile_edit form'}}) }}
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">face</i>
                                            </span>
                                        </div>
                                        {{ form_widget(form.username,{'attr': {'class': 'form-control', 'placeholder': 'Username ...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                 <i class="material-icons">mail</i>
                                            </span>
                                        </div>
                                        {{ form_widget(form.email,{'attr': {'class': 'form-control', 'placeholder': 'Email ...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">lock_outline</i>
                                           </span>
                                        </div>
                                        {{ form_widget(form.current_password,{'attr': {'class': 'form-control', 'placeholder': 'Password ...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">phone</i>
                                           </span>
                                        </div>
                                        {{ form_widget(form.num_tel,{'attr': {'class': 'form-control', 'placeholder': 'Numéro d Télephone ...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">text_format</i>
                                            </span>
                                        </div>
                                        {{ form_widget(form.nom,{'attr': {'class': 'form-control', 'placeholder': 'Nom ...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">text_format</i>
                                           </span>
                                        </div>
                                        {{ form_widget(form.prenom,{'attr': {'class': 'form-control', 'placeholder': 'Prenom ...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">date_range</i>
                                           </span>
                                        </div>
                                        {#<input type="text" class="form-control datetimepicker" name="date_naissance" value="10/05/2016"/>#}
                                        {{ form_widget(form.date_naissance,{'attr': {'class': 'form-control datetimepicker', 'placeholder': 'Date de naissance ...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">location_city</i>
                                           </span>
                                        </div>
                                        {{ form_widget(form.adresse,{'attr': {'class': 'form-control', 'placeholder': 'adresse...'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">wc</i>
                                           </span>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                {{ form_widget(form.sexe.0,{'attr': {'class': 'form-control form-check-input', 'placeholder': 'Sexe...'}}) }}
                                                Homme
                                                <span class="circle">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                            <label class="form-check-label">
                                                {{ form_widget(form.sexe.1,{'attr': {'class': 'form-control form-check-input', 'placeholder': 'Sexe...'}}) }}
                                                Femme
                                                <span class="circle">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                {#<div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                               <span class="input-group-text">
                                                   <i class="material-icons">location_city</i>
                                               </span>
                                        </div>
                                        <label class="label-control">Datetime Picker</label>
                                        <input type="text" class="form-control datetimepicker" value="10/05/2016"/>
                                    </div>
                                </div>#}
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">insert_photo</i>
                                           </span>
                                        </div>
                                        <div class="image-preview-single">
                                            <img src="" alt="" class="img-raised rounded img-fluid">
                                            <div></div>
                                            {{ form_widget(form.image,{'attr': {'class': 'form-control', 'id': 'profile_avatar','type': 'hidden', 'role': 'uploadcare-uploader', 'name': 'content', 'data-crop': 'enabled', 'data-preview-step': 'true', 'data-images-only': 'true'}}) }}
                                        </div>
                                    </div>
                                </div>
                                {#<div class="form-group">#}
                                {#<div class="input-group">#}
                                {#<div class="input-group-prepend">#}
                                {#<span class="input-group-text">#}
                                {#<i class="material-icons">work</i>#}
                                {#</span>#}
                                {#</div>#}
                                {#{{ form_widget(form.roles,{'attr': {'class': 'form-control', 'placeholder': 'Role...'}}) }}#}
                                {#</div>#}
                                {#</div>#}
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                           <span class="input-group-text">
                                               <i class="material-icons">work</i>
                                           </span>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                {{ form_widget(form.roles.0,{'attr': {'class': 'form-control form-check-input', 'placeholder': 'Role...'}}) }}
                                                Client
                                                <span class="circle">
                                                      <span class="check"></span>
                                                </span>
                                            </label>
                                            <label class="form-check-label">
                                                {{ form_widget(form.roles.1,{'attr': {'class': 'form-control form-check-input', 'placeholder': 'Role...'}}) }}
                                                Patissier
                                                <span class="circle">
                                                      <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" value="" checked>
                                        <span class="form-check-sign">
                                                <span class="check"></span>
                                        </span>
                                        I agree to the
                                        <a href="#something">terms and conditions</a>.
                                    </label>
                                </div>
                                <div class="text-center">
                                    <input type="submit" value="{{ 'Submit Changes'|trans }}"
                                           class="btn btn-primary btn-round"/>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
